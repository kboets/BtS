<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_league" author="kboets">
        <createTable tableName="LEAGUE">
            <column autoIncrement="true" name="league_id" type="bigint" incrementBy="1">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false" />
            </column>
            <column name="start_season" type="date">
                <constraints nullable="false" />
            </column>
            <column name="end_season" type="date">
                <constraints nullable="false" />
            </column>
            <column name="current" type="boolean">
            </column>
            <column name="season" type="int">
                <constraints nullable="false" />
            </column>
            <column name="logo" type="varchar(250)"></column>
            <column name="flag" type="varchar(250)"></column>
        </createTable>
    </changeSet>



</databaseChangeLog>